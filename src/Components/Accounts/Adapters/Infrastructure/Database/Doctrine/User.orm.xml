<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Components\Accounts\Domain\User" table="user">
        <id name="id" type="uuid" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="login" column="login" length="255" />
        <field name="password" column="password" length="255" />
        <field name="locale" type="locale" column="locale"/>
        <field name="rememberToken" column="remember_token" length="255"/>
    </entity>
</doctrine-mapping>
